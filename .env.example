# --- APP CONFIGURATION ---
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_TRUSTMESH_PERSONA=civic
NEXT_PUBLIC_ENABLE_PERSONA_SWITCHER=true

# --- DATABASE (NEON) ---
# Connection string for Postgres (Transaction Pooler recommended)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# --- AUTH (MAGIC.LINK) ---
NEXT_PUBLIC_MAGIC_PUBLISHABLE_KEY=pk_live_...
MAGIC_SECRET_KEY=sk_live_...

# --- HEDERA (TESTNET) ---
NEXT_PUBLIC_HEDERA_NETWORK=testnet
NEXT_PUBLIC_HEDERA_OPERATOR_ID=0.0.xxx
NEXT_PUBLIC_HEDERA_OPERATOR_KEY=302e...
# Server-side mirrors (Next.js requires strictly separate env vars for server/client in some configs)
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=0.0.xxx
HEDERA_OPERATOR_KEY=302e...

# --- WORLDS STUDIO (TOPICS) ---
# Canonical Topic Registry
NEXT_PUBLIC_TOPIC_PROFILE=0.0.xxx
NEXT_PUBLIC_TOPIC_CONTACT=0.0.xxx
NEXT_PUBLIC_TOPIC_TRUST=0.0.xxx
NEXT_PUBLIC_TOPIC_SIGNAL=0.0.xxx
NEXT_PUBLIC_TOPIC_RECOGNITION=0.0.xxx

# --- FEATURE FLAGS ---
NEXT_PUBLIC_HCS_ENABLED=true
NEXT_PUBLIC_XMTP_ENABLED=true
NEXT_PUBLIC_XMTP_ENV=dev
